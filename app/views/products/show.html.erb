<div class="bg-white dark:bg-gray-900">
  <div class="pt-6">
    <nav aria-label="Breadcrumb" class="border-b border-gray-200 dark:border-gray-700">
      <ol role="list" class="mx-auto flex max-w-2xl items-center space-x-2 px-4 py-4 sm:px-6 lg:max-w-7xl lg:px-8">
        <li>
          <div class="flex items-center">
            <%= link_to root_path, class: "text-sm font-medium text-gray-500 dark:text-gray-400 hover:text-orange-600 dark:hover:text-orange-400 transition-colors" do %>
              <svg class="mr-2 h-4 w-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M9.293 2.293a1 1 0 011.414 0l7 7A1 1 0 0117 10v8a1 1 0 01-1 1h-2a1 1 0 01-1-1v-3a1 1 0 00-1-1H8a1 1 0 00-1 1v3a1 1 0 01-1 1H4a1 1 0 01-1-1v-8a1 1 0 01.293-.707l7-7z" clip-rule="evenodd" />
              </svg>
              Home
            <% end %>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="h-5 w-5 flex-shrink-0 text-gray-300 dark:text-gray-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
            </svg>
            <%= link_to products_path, class: "ml-2 text-sm font-medium text-gray-500 dark:text-gray-400 hover:text-orange-600 dark:hover:text-orange-400 transition-colors" do %>
              Solar Products
            <% end %>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="h-5 w-5 flex-shrink-0 text-gray-300 dark:text-gray-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
            </svg>
            <span class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-100" aria-current="page">
              <%= truncate(@product.title, length: 45) %>
            </span>
          </div>
        </li>
      </ol>
    </nav>

    <!-- Product info -->
    <div class="mx-auto max-w-2xl px-4 pb-16 pt-10 sm:px-6 lg:grid lg:max-w-7xl lg:grid-cols-3 lg:grid-rows-[auto,auto,1fr] lg:gap-x-8 lg:px-8 lg:pb-24 lg:pt-16">
      <div class="lg:col-span-2 lg:border-r lg:border-gray-200 dark:lg:border-gray-700 lg:pr-8">
        <h1 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-3xl">
          <%= @product.title %>
        </h1>

        <!-- Mobile product image -->
        <div class="mt-6 lg:hidden">
          <div class="group aspect-h-3 aspect-w-4 overflow-hidden rounded-lg bg-gray-200 dark:bg-gray-600">
            <% if @product.image_url.present? %>
              <%= image_tag @product.image_url,
                  alt: @product.title,
                  class: "h-full w-full object-cover object-center dark:mix-blend-multiply dark:opacity-90 dark:hover:mix-blend-normal dark:hover:opacity-100 transition-all duration-150",
                  loading: "lazy",
                  onerror: "this.style.display='none'; this.nextElementSibling.style.display='flex';" %>
              <div class="hidden h-full w-full items-center justify-center bg-gray-100 dark:bg-gray-800">
                <div class="text-center">
                  <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No image available</h3>
                </div>
              </div>
            <% else %>
              <div class="flex h-full w-full items-center justify-center bg-gray-100 dark:bg-gray-800">
                <div class="text-center">
                  <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No image available</h3>
                  <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Product image not found</p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Options -->
      <div class="mt-4 lg:row-span-3 lg:mt-0">
        <h2 class="sr-only">Product information</h2>
        <p class="text-3xl tracking-tight text-gray-900 dark:text-white">
          <%= @product.display_price %>
        </p>

        <!-- Reviews -->
        <div class="mt-6">
          <h3 class="sr-only">Product information</h3>
          <div class="flex items-center">
            <div class="flex items-center">
              <!-- Star rating placeholder -->
              <% 5.times do |i| %>
                <svg class="text-gray-300 h-5 w-5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
                </svg>
              <% end %>
            </div>
            <p class="sr-only">No reviews yet</p>
          </div>
        </div>

        <div class="mt-10">
          <!-- Product details -->
          <div>
            <h3 class="text-sm font-medium text-gray-900 dark:text-white">Product Details</h3>

            <div class="mt-4">
              <ul role="list" class="list-disc space-y-2 pl-4 text-sm">
                <li class="text-gray-400 dark:text-gray-300">
                  <span class="text-gray-600 dark:text-gray-300">Product URL:</span>
                </li>
                <% if safe_url(@product.url) %>
                  <li class="text-gray-600 dark:text-gray-300">
                    <%= link_to safe_url(@product.url), safe_url(@product.url),
                        target: "_blank",
                        rel: "noopener noreferrer",
                        class: "text-orange-600 dark:text-orange-400 hover:text-orange-500 dark:hover:text-orange-300 underline" %>
                  </li>
                <% end %>
                <% if @product.last_scraped_at %>
                  <li class="text-gray-400 dark:text-gray-300">
                    <span class="text-gray-600 dark:text-gray-300">Last updated:</span>
                  </li>
                  <li class="text-gray-600 dark:text-gray-300">
                    <%= time_ago_in_words(@product.last_scraped_at) %> ago
                  </li>
                <% end %>
              </ul>
            </div>
          </div>

          <!-- Actions -->
          <div class="mt-10">
            <% if safe_url(@product.url) %>
              <%= link_to safe_url(@product.url),
                  target: "_blank",
                  rel: "noopener noreferrer",
                  class: "flex w-full items-center justify-center rounded-md border border-transparent bg-orange-600 px-8 py-3 text-base font-medium text-white hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2" do %>
                View on SignatureSolar.com
                <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="py-10 lg:col-span-2 lg:col-start-1 lg:border-r lg:border-gray-200 dark:lg:border-gray-700 lg:pb-16 lg:pr-8 lg:pt-6">
        <!-- Product image -->
        <div class="group aspect-h-4 aspect-w-3 overflow-hidden rounded-lg bg-gray-200 dark:bg-gray-600 hidden lg:block">
          <% if @product.image_url.present? %>
            <%= image_tag @product.image_url,
                alt: @product.title,
                class: "h-full w-full object-cover object-center dark:mix-blend-multiply dark:opacity-90 dark:hover:mix-blend-normal dark:hover:opacity-100 transition-all duration-150",
                loading: "lazy",
                onerror: "this.style.display='none'; this.nextElementSibling.style.display='flex';" %>
            <div class="hidden h-full w-full items-center justify-center bg-gray-100 dark:bg-gray-800">
              <div class="text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No image available</h3>
              </div>
            </div>
          <% else %>
            <div class="flex h-full w-full items-center justify-center bg-gray-100 dark:bg-gray-800">
              <div class="text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No image available</h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Product image not found</p>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Product details -->
        <div class="mt-10">
          <h3 class="text-sm font-medium text-gray-900 dark:text-white">Product Information</h3>

          <div class="mt-4">
            <div class="prose prose-sm max-w-none text-gray-500 dark:text-gray-300">
              <p>
                This solar equipment product is available from SignatureSolar.com.
                Pricing and availability information is automatically updated from their website.
              </p>

              <% if @product.slug %>
                <p class="mt-4">
                  <strong>Product Slug:</strong> <%= @product.slug %>
                </p>
              <% end %>

              <p class="mt-4">
                <strong>Product ID:</strong> #<%= @product.id %>
              </p>

              <% if @product.created_at %>
                <p class="mt-2">
                  <strong>First discovered:</strong> <%= @product.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
