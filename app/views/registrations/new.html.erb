<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <div class="mx-auto h-12 w-12 flex items-center justify-center">
        <span class="text-4xl">☀️</span>
      </div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900 dark:text-white">
        Create your account
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600 dark:text-gray-400">
        Start tracking solar equipment prices today
      </p>
    </div>

    <%= form_with model: @user, url: registrations_path, class: "mt-8 space-y-6" do |form| %>
      <div class="space-y-4">
        <div>
          <%= form.label :email_address, "Email address", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= form.email_field :email_address,
                required: true,
                autofocus: true,
                autocomplete: "email",
                placeholder: "Enter your email address",
                class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 placeholder-gray-500 dark:placeholder-gray-400 text-gray-900 dark:text-white bg-white dark:bg-gray-700 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm" %>
          <% if @user.errors[:email_address].any? %>
            <p class="mt-1 text-sm text-red-600 dark:text-red-400">
              <%= @user.errors[:email_address].first %>
            </p>
          <% end %>
        </div>

        <div>
          <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= form.password_field :password,
                required: true,
                autocomplete: "new-password",
                placeholder: "Enter your password",
                maxlength: 72,
                class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 placeholder-gray-500 dark:placeholder-gray-400 text-gray-900 dark:text-white bg-white dark:bg-gray-700 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm" %>
          <% if @user.errors[:password].any? %>
            <p class="mt-1 text-sm text-red-600 dark:text-red-400">
              <%= @user.errors[:password].first %>
            </p>
          <% end %>
        </div>

        <div>
          <%= form.label :password_confirmation, "Confirm password", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <%= form.password_field :password_confirmation,
                required: true,
                autocomplete: "new-password",
                placeholder: "Confirm your password",
                maxlength: 72,
                class: "mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 placeholder-gray-500 dark:placeholder-gray-400 text-gray-900 dark:text-white bg-white dark:bg-gray-700 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm" %>
          <% if @user.errors[:password_confirmation].any? %>
            <p class="mt-1 text-sm text-red-600 dark:text-red-400">
              <%= @user.errors[:password_confirmation].first %>
            </p>
          <% end %>
        </div>
      </div>

      <div>
        <%= form.submit "Create account",
              class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
      </div>

      <div class="text-center">
        <%= link_to "Already have an account? Sign in", new_session_path,
              class: "text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300 text-sm font-medium" %>
      </div>
    <% end %>
  </div>
</div>
